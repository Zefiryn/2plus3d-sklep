      <action method="addExternalItem"><type>external_js</type><name>//2plus3d.pl/scripts/indicator.js</name><params/></action>
      <action method="addExternalItem"><type>external_js</type><name>//2plus3d.pl/scripts/slides.js</name><params/></action>
      <action method="addExternalItem"><type>external_js</type><name>//2plus3d.pl/scripts/location_hash.js</name><params/></action>
      </reference>
