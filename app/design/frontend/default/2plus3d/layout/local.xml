<?xml version="1.0"?>
<layout version="0.1.0">
  <default>
    <reference name="head">
      <action method="addExternalItem"><type>external_js</type><name>http://webfonts.creativecloud.com/lato:n7,n4,n9,n3:all.js</name><params/></action>
      <action method="addItem"><type>skin_css</type><path>css/local.css</path></action>
    </reference>
    <reference name="header">
      <remove name="top.search" />
      <remove name="top.links" />
    </reference>
    <reference name="footer">
      <remove nam="store_switcher" />
      <remove name="footer_links" />
    </reference>
    <reference name="right">
      <remove name="catalog.compare.sidebar" />
      <remove name="right.reports.product.viewed" />
      <remove name="right.reports.product.compared" />
      <remove name="right.permanent.callout" />
      <remove name="paypal.partner.right.logo" />
      <block type="core/template" name="information_block" as="informations" template="page/template/block.phtml">
        <action method="setLabel"><label>Informations</label></action>
        <block type="page/template_links" name="information_links" as="links" template="page/template/links.phtml">
          <action method="addLink" translate="label title">
            <label>Regulations</label><url>regulamin-sklepu</url><title>Regulations</title><prepare>true</prepare><urlParams /><position>1</position><liParams/><aParams /><beforeText /><afterText />
          </action>
          <action method="addLink" translate="label title">
            <label>Payment and Delivery</label><url>platnosc-i-dostawa</url><title>Payment and Delivery</title><prepare>true</prepare><urlParams /><position>2</position><liParams/><aParams /><beforeText /><afterText />
          </action>
          <action method="addLink" translate="label title">
            <label>Contact</label><url>kontakt</url><title>Contact</title><prepare>true</prepare><urlParams /><position>3</position><liParams/><aParams /><beforeText /><afterText />
          </action>
        </block>
      </block>
      <block type="catalog/category_block" name="right.books.category" after="information_links" template="catalog/sidebar/block.phtml">
        <action method="setCategoryUrlKey"><name>ksiazki</name></action>
      </block>
    </reference>
  </default>
  
  <cms_index_index translate="label">
    <remove name="cms.wrapper" />
  </cms_index_index>
  
  <customer_account_login>
    <reference name="head">
      <action method="setForcedTitle" translate="title"><title>Login</title></action>
    </reference>
    <reference name="customer_form_login">
      <block type="customer/form_register" name="customer_login_form_register" template="customer/form/register.phtml">
        <block type="page/html_wrapper" name="customer.login.form.register.fields.before" as="form_fields_before" translate="label">
          <label>Form Fields Before</label>
        </block>
      </block>
    </reference>
  </customer_account_login>
  
  <catalog_product_view>
    <reference name="product.info">
      <block type="catalog/product_view" name="product.book.info" template="catalog/product/view/book-info.phtml" />
    </reference>
  </catalog_product_view>
</layout>